<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UCMSApp.VVM.MainMenu.AdminMenu"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:UCMSApp.VVM.MainMenu"
    Title="{Binding Title}"
    x:DataType="vm:AdminMenuViewModel">
    <VerticalStackLayout Spacing="10" VerticalOptions="CenterAndExpand">
        <Button
            Command="{Binding GoToAccountViewCommand}"
            FontAttributes="Bold"
            Text="Аккаунт"
            WidthRequest="200" />
        <Button
            Command="{Binding GoToCompanyViewCommand}"
            FontAttributes="Bold"
            Text="Компания"
            WidthRequest="200" />
        <Button
            Command="{Binding GoToSitesViewCommand}"
            FontAttributes="Bold"
            Text="Сайты"
            WidthRequest="200" />
        <Button
            Command="{Binding GoToTemplatesViewCommand}"
            FontAttributes="Bold"
            Text="Шаблоны"
            WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>